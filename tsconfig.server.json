{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "/opt/render/project/src/dist",
    "rootDir": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src/server.ts", "src/config/**/*"],
  "exclude": ["node_modules", "dist", "src/components/**/*", "src/context/**/*", "src/App.tsx", "src/main.tsx"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
} 